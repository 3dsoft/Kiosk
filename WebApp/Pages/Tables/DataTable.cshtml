@page
@model DataTableModel
@{
    ViewData["Title"] = "DataTable";
}

@section Styles {
    <!-- DataTables -->
    <link rel="stylesheet" href="~/libs/datatables/css/dataTables.bootstrap.min.css">
}

@section Scripts {
    <!-- DataTables -->
    <script src="~/libs/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/libs/datatables/js/dataTables.bootstrap.min.js"></script>

    <!-- page script -->
    <script>
        $(function () {
            $('#example1').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            });
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            });
        })
    </script>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Payment
        <small>Total Payment List</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Payment</a></li>
        <li class="active">Payment List</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Payment</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-lg-4">
                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>DateTime</th>
                                    <th>Type</th>
                                    <th>Total Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Payment)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td><a asp-route-id="@item.Id" asp-page="DataTable">@item.dateTime</a></td>
                                        <td>@item.paymentType</td>
                                        <td>@item.totalPrice</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="col-lg-8">
                        <table id="example2" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Date Time</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.PaymentList != null && Model.PaymentList.Count() > 0)
                                {
                                    foreach (var item in Model.PaymentList)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.dateTime</td>
                                            <td>@item.Name</td>
                                            <td>@item.Price</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>-</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
